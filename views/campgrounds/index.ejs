<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <ul>
        <% for(let campground of campgrounds) { %>
            <li>
                <a href="/campgrounds/<%= campground._id %>">
                    <%= campground.name %>
                </a>,
                <%= campground.location %>
            </li>
            <% } %>
    </ul>
    <footer>
        <a href="/campgrounds/new">Add New Campground</a>
    </footer>